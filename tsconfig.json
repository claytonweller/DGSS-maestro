{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "noEmitHelpers": false,
        "noEmitOnError": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "test/__mocks__/*.ts"
    ],
    "include": [
        "app",
        "test",
        "integration"
    ]
}